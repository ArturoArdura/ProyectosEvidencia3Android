<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#2A1B3D"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/bounty_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/bounty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kill Aliens"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/bounty_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+100 PTS"
            android:textColor="@color/rick_yellow"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btn_accept_bounty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ACCEPT"
            android:textSize="10sp"
            android:backgroundTint="@color/rick_green_neon"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>