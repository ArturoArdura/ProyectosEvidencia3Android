<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/rick_card_bg"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alien_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birdperson"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/alien_species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avian"
                android:textColor="@color/rick_blue_hair"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_edit_alien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@color/rick_yellow"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/btn_delete_alien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?selectableItemBackgroundBorderless"
            app:tint="@color/purple_500"
            android:padding="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>